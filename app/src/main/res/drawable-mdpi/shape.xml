<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	    <shape>
	        <gradient 
	            android:startColor="#F7F7F7"
	            android:endColor="#3890D4"
	            android:type="radial"
	            android:gradientRadius="50"/>
	        <stroke 
	            android:width="2dip"
	            android:color="#9C9A9C"
	            android:dashWidth="3dip"
	            android:dashGap="3dip"/>
	        <corners 
	            android:radius="5dip"/>
	        <padding 
	            android:left="10dip"
	            android:top="10dip"
	            android:right="10dip"
	            android:bottom="10dip"/>
	    </shape>
	</item>
	<item android:state_focused="true">
	    <shape >
	        <gradient 
	            android:startColor="#F7F7F7"
	            android:endColor="#3890D4"
	            android:angle="270"/>
	        <stroke 
	            android:width="2dip"
	            android:color="#9C9A9C"/>
	        <corners 
	            android:radius="5dip"/>
	       <padding 
	            android:left="10dip"
	            android:top="10dip"
	            android:right="10dip"
	            android:bottom="10dip"/>
	    </shape>
	</item>
	<item >
	    <shape >
	        <solid 
	            android:color="#F7F7F7"/>
	        <stroke 
	            android:width="2dip"
	            android:color="#9C9A9C"/>
	        <corners 
	            android:topLeftRadius="5dip"
	            android:topRightRadius="5dip"
	            android:bottomLeftRadius="5dip"
	            android:bottomRightRadius="5dip"/>
	       <padding 
	            android:left="10dip"
	            android:top="10dip"
	            android:right="10dip"
	            android:bottom="10dip"/>
	    </shape>
	</item>
    
</selector>